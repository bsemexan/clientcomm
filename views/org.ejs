						</div>
						<%= cms[i].department %>
					</li>
					<li>
						<div class="infoblock-id">
							created
						</div>
						<% try { %>
							<% var upd = new Date(cms[i].created) %>
							<%= [upd.getMonth()+1, upd.getDate(), upd.getFullYear()].join("/") %>
						<% } catch (err) { %>
							Unknown
						<% } %>
					</li>

				<% } %>
			<% } %>
