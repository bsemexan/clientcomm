				<i><%= staffCt %> active staff</i>
			</li>

			<span id="staffaccounts">
			<% for (var i = 0; i < cms.length; i++) { %>
				<% if (!cms[i].admin && cms[i].active) { %>

					<li>
						<b>
						<a href="/cms/<%= cms[i].cmid %>">
							<%= cms[i].last %>, <%= cms[i].first %> <%= cms[i].middle %>
						</a>
						</b>
					</li>
					<li>
						<div class="infoblock-id">
							email
