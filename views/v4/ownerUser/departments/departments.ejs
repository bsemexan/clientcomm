<% include ../../partials/ownerFrameTop %>

<!-- Load in addition CSS -->
<link rel="stylesheet" type="text/css" href="/static/css/v4_departments.css">

<div class="header">
  <div class="column">name</div>
  <div class="column">attached number</div>
  <div class="column">members</div>
  <div class="column">creation details</div>
  <div class="column">edit</div>
  <div class="column">delete</div>
</div>


<% if (departments.length == 0) { %>
  <% include ../../partials/emptyResultsGreeting %>
<% } %>


<% departments.forEach(function (department) { %>
  <div class="notificationRow">
    <div class="column">
      <span class="clientName">
        <%= department.name %>
      </span>
    </div>
    <div class="column">
      <%= department.value.replace(/(\d{1})(\d{3})(\d{3})(\d{4})/, '$1 ($2) $3-$4') %>
    </div>
    <div class="column">
      <span class="bigNumber"><%= department.members ? department.members : '0' %></span>
    </div>
    <div class="column">
      <%= moment.tz(department.send, local_tz).format('MMM. Do, hh:mmA') %>
      by <%= department.created_by_first + ' ' + department.created_by_last %>
    </div>
    <div class="column">
      <% if (hub.sel == "pending") { %>
        <a href="/v4/users/<%=user.cmid%>/primary/notifications/edit/<%=department.notificationid%>">
          <i class="fa highlight fa-pencil" aria-hidden="true"></i>
        </a>
      <% } else { %>-<% } %>
    </div>
    <div class="column">
      <a href="/v4/users/<%=user.cmid%>/primary/notifications/remove/<%=department.notificationid%>">
        <i class="fa highlight fa-trash" aria-hidden="true"></i>
      </a>
    </div>
  </div>
<% }) %>


<% include ../../partials/hubFrameBottom %>