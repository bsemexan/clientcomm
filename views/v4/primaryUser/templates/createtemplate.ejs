<% include ../../partials/cardFrameTop %>

<div class="card-head">
  <!-- exit button -->
  <a href="/v4/users/<%=user.cmid%>/primary/templates">
    <% include ../../partials/cardExit %>
  </a>
  <div class="cardTitle">
    Create Template
  </div>
  <div class="cardSubtitle">
    Use templates to save time typing by saving common messages.
  </div>
</div>

<div class="cardBody">

    <form method="post" 
          action="/v4/users/<%=user.cmid%>/primary/templates/create">

      <input type="hidden" name="org" value="<%= user.org %>">
      <input type="hidden" name="casemanager" value="<%= user.cmid %>">


      <div class="formRow">
        <div class="formLabel">
          Template Title
        </div>
        <div class="formInput">
          <input  type="text"
                  name="title" 
                  maxlength="30" 
                  required>
        </div>
      </div>

      <div class="formRow">
        <div class="formLabel"> 
          Enter your templated phrase or message below.
        </div>
        <div class="formInput">
          <textarea name="content"
                    rows="5" 
                    maxlength="160"></textarea>
        </div>
      </div>

      <center>
      <input  type="submit" 
              class="formSubmit" 
              value="Submit">
      </center>

    </form>

</div>


<% include ../../partials/cardFrameBottom %>