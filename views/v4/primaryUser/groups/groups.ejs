<% include ../../partials/hubFrameTop %>

<!-- Load in addition CSS -->
<link rel="stylesheet" type="text/css" href="/static/css/v4_groups.css">

<div class="header">
  <div class="column">group name</div>
  <div class="column">last used</div>
  <div class="column">clients</div>
  <div class="column">edit</div>
  <div class="column">delete</div>
</div>


<% groups.forEach(function (group) { %>
  <div class="groupRow">
    <div class="column">
      <span class="groupName">
        <%= group.name %>
      </span>
    </div>
    <div class="column">
      <span class="time">
        <%= moment.tz(group.last_used, local_tz).format('MMM. Do, hh:mmA') %>
      </span>
    </div>
    <div class="column">
      <span class="message">
        <%= 'foobar' %>
      </span>
    </div>
    <div class="column">
      <a href="/v4/users/<%=user.cmid%>/primary/groups/edit/<%=group.groupid%>">
        <i class="fa highlight fa-pencil" aria-hidden="true"></i>
      </a>
    </div>
    <div class="column">
      <% if (group.active) { %>
        <a href="/v4/users/<%=user.cmid%>/primary/groups/remove/<%=group.group_id%>">
          <i class="fa highlight fa-trash" aria-hidden="true"></i>
        </a>
      <% } else { %>
        <a href="/v4/users/<%=user.cmid%>/primary/groups/activate/<%=group.group_id%>">
          <i class="fa highlight fa-undo" aria-hidden="true"></i>
        </a>
      <% } %>
    </div>
  </div>
<% }) %>


<% include ../../partials/hubFrameBottom %>