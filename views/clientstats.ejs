<% include header %>

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.css">

<div class="infoblock">
	<div class="infoblock-label">
		Staff Overview
	</div>
	<div class="infoblock-body">
		<ul>

			<li>
				<b><%= cm.first %> <%= cm.middle %> <%= cm.last %></b>
			</li>

			<li>
				<div class="infoblock-id">
					email
				</div>
				<%= cm.email %>
			</li>

			<li>
				<div class="infoblock-id">
					position
				</div>
				<%= cm.position %>
			</li>

			<li>
				<div class="infoblock-id">
					department
				</div>
				<%= cm.department %>
			</li>

			<li>
				<div class="infoblock-id">
					last login
				</div>
				<% try { %>
					<% var upd = new Date(cm.updated) %>
					<%= [upd.getMonth()+1, upd.getDate(), upd.getFullYear()].join("/") + " at " + [upd.getHours(), upd.getMinutes(), upd.getSeconds()].join(':') %>
				<% } catch (err) { %>
					Unknown
				<% } %>
			</li>

			<li>
				<div class="infoblock-id">
					created
				</div>
				<% try { %>
					<% var upd = new Date(cm.created) %>
					<%= [upd.getMonth()+1, upd.getDate(), upd.getFullYear()].join("/") + " at " + [upd.getHours(), upd.getMinutes(), upd.getSeconds()].join(':') %>
				<% } catch (err) { %>
					Unknown
				<% } %>
			</li>

		</ul>
	</div>
</div>

<div class="infoblock">
	<div class="infoblock-label" onclick="toggle('conversationlogs')">
		Conversation Logs
	</div>
	<div class="infoblock-body">
		<ul>

			<li>
				<% var totCt = 0 %>
				<%= msgs.forEach(function (ea) { totCt += Number(ea.count); }) %>
				<%= totCt %> total messages sent
			</li>

			<span style="display:none" id="conversationlogs">
			<% for (var i = 0; i < msgs.length; i++) { %>

				<li>
					<div class="infoblock-id">
						id
					</div>
					<%= msgs[i].convo %>
						<i>
							(on
							<% try { %>
								<% var upd = new Date(msgs[i].date) %>
								<%= [upd.getMonth()+1, upd.getDate(), upd.getFullYear()].join("/") %>
							<% } catch (err) { %>
								Unknown
							<% } %>
							)
						</i>
				</li>

				<li>
					<div class="infoblock-id">
						count
					</div>
					<%= msgs[i].count %> messages sent
				</li>
			<% } %>
			</span>

		</ul>
	</div>
</div>

<div class="chart"><div id="chart"></div></div>

<script src="https://code.jquery.com/jquery-1.12.2.min.js" integrity="sha256-lZFHibXzMHo3GGeehn1hudTAP3Sc0uKXBXAzHX1sjtk=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.js"></script>

<script type="text/javascript">

// dynamically adjust chart div width so it lies next to other content
function resizeChart () { 
	var size = window.innerWidth - 400;
	$("#chart").css("width", size); 
	if (chart) { 
		if (size > 250) { $(".chart").show(); chart.resize(size); }
		else { $(".chart").hide(); }
	}
}
window.onresize = function () { resizeChart(); };
resizeChart();

var chart = null, compiled = {};
var msgs = "<%= JSON.stringify(msgs) %>";
try {
	msgs = JSON.parse(msgs.replace(/&#34;/g, '"')).filter(function (ea) {
		var d = new Date(ea.date);
		if (Object.prototype.toString.call(d) === "[object Date]") {
		  if (isNaN(d.getTime())) {
		  	return false;
		  } else { return true; }
		} else { return false; }
	}).map(function (ea) { 
		var d = new Date(ea.date); 
		ea.date = [d.getFullYear(), d.getMonth()+1, d.getDate()].join("-");
		return ea;
	}).forEach(function (ea) {
		if (!compiled[ea.date]) { compiled[ea.date] = 0; };
		compiled[ea.date] += isNaN(ea.count) ? 0 : Number(ea.count);
	});

	var keys = Object.keys(compiled).sort(function (a,b) { return new Date(a) - new Date(b); });
	var vals = keys.map(function (ea) { return compiled[ea]; });
	compiled.x = keys;
	compiled.y = vals;

	makeChart(); 
} catch (e) { console.log(e) }

function makeChart () {
	var dates = compiled.x;
	var vals = compiled.y;
	var d = new Date();
	var today = [d.getFullYear(), d.getMonth()+1, d.getDate()].join("-");

	if (dates[dates.length] !== today) {
		dates.push(today);
		vals.push("0");
	}

	chart = c3.generate({
	  data: { x: "x", columns: [["x"].concat(dates), ["Messages"].concat(vals)], color: function (color, d) { return "#0084FF"; } },
	  axis: { x: { type: "timeseries", tick: { format: "%Y-%m-%d" } } },
	  legend: { hide: true },
	  padding: { right: 20 },
	  size: { height: 205 },
	  grid: { y: { show: true }, x: { show: true } },
	  bindto: "#chart"
	});	
}

</script>


