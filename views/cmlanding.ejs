<% include header-base %>

<% var thisUsersCount = 0; %>
<% var topUsersCount = 0; %>
<% var topUser = null; %>

<% for (var i = 0; i < counts.length; i++) { %>
<% 	var c = counts[i]; %>
<% 	var ct = Number(c.count); %>
<% 	if (ct > topUsersCount) { %>
<% 		topUsersCount = ct; %>
<% 		topUser = c; %>
<% 	}; %>
<% 	if (Number(c.cmid) == Number(user.cmid)) thisUsersCount = ct; %>
<% } %>

<% var ctRatio = Math.round((thisUsersCount/topUsersCount) * 1000)/10; %>


