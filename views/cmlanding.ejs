	}
	.yellow {
		background-color:#E5D50A;
	}
	.green:hover svg path {
		fill: #0AA629;
	}
	.blue:hover svg path {
		fill: #2F8CE8;
	}
	.yellow:hover svg path {
		fill: #E5D50A;
	}


	/* progress bar */
	.chart {
		display: block;
		clear: both;
		position: relative;
		width: 830px;
		height: 120px;
		margin-top: 50px;
		margin-bottom: 50px;
	}
	.chart .left {
		width: 200px;
		height: 120px;
		padding: 15px 10px 15px 90px;
	}
	.chart .right {
		width: 450px;
		height: 70px;
		color: #2F8CE8;
		font-size: 24px;
		text-align: left;
		padding: 40px 70px 40px 10px;
	}
	.chart .left, .chart .right {
		float: left;
		
	}
</style>

