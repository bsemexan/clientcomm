<% include header %>

<% if (clients.length > 0) { %>
	Your clients:
	<ul>
		<% for (var i = 0; i < clients.length; i++ ) { %>
			<li>
				<a href="/cms/<%= cm.cmid %>/cls/<%= clients[i].clid %>">
					<%= clients[i].first + " " + clients[i].middle + " " + clients[i].last %>
				</a>
				<span style="font-size:small;">
					<% if (clients[i].otn) { %>
						OTN: <%= clients[i].otn %>
					<% } %>
					<% if (clients[i].so) { %>
						SO: <%= clients[i].so %>
					<% } %>
				</span>
			</li>
		<% } %>
	</ul>
<% } else { %>
	You have no clients. Add some below.
<% } %>

<hr>

<form method="post">

	<b>Add a new client</b>

	<input type="hidden" name="cmid" value="<%= cm.cmid %>">

	<div class="form-row">
		<div class="form-desc">
			First
		</div>
		<div class="form-entry">
			<input type="text" name="first" placeholder="Jane" required>
		</div>
	</div>

	<div class="form-row">
		<div class="form-desc">
			Middle
		</div>
		<div class="form-entry">
			<input type="text" name="middle" placeholder="M">
		</div>
	</div>

	<div class="form-row">
		<div class="form-desc">
			Last
		</div>
		<div class="form-entry">
			<input type="text" name="last" placeholder="Doe" required>
		</div>
	</div>

	<div class="form-row">
		<div class="form-desc">
			Date of Birth
		</div>
		<div class="form-entry">
			<input type="date" name="dob" value="1955-01-01" required>
		</div>
	</div>

	<div class="form-row">
		<div class="form-desc">
			OTN
		</div>
		<div class="form-entry">
			<input type="text" name="otn" placeholder="135792468">
		</div>
	</div>

	<div class="form-row">
		<div class="form-desc">
			SO
		</div>
		<div class="form-entry">
			<input type="text" name="so" placeholder="246813579">
		</div>
	</div>

	<input type="submit" value="Submit">

</form>



<div class="infoblock">
	<div class="infoblock-label" onclick="toggle('newaccount')">
		Create New Account
	</div>
	<div class="infoblock-body" style="display:none" id="newaccount">

		<ul>
		<form method="post">
			
			<li>
				<input type="hidden" name="cmid" value="<%= cm.cmid %>">
				<i>Add user to organization</i>
			</li>

			<li>
				<div class="infoblock-id">
					first
				</div>
				<input type="text" name="first" placeholder="e.g. Jane" required>
			</li>

			<li>
				<div class="infoblock-id">
					middle
				</div>
				<input type="text" name="middle" placeholder="e.g. M">
			</li>

			<li>
				<div class="infoblock-id">
					last
				</div>
				<input type="text" name="last" placeholder="e.g. Doe" required>
			</li>

			<li>
				<div class="infoblock-id">
					email
				</div>
				<input type="email" name="email" placeholder="e.g. jane@example.com" required>
			</li>

			<li>
				<div class="infoblock-id">
					password
				</div>
				<input type="password" name="password" placeholder="•••••••" required>
			</li>

			<li>
				<div class="infoblock-id">
					position
				</div>
				<input type="text" name="position" placeholder="e.g. Therapist" required>
			</li>

			<li>
				<div class="infoblock-id">
					department
				</div>
				<input type="text" name="department" placeholder="e.g. Pretrial Services" required>
			</li>

			<li>
				<div class="infoblock-id">
					admin
				</div>
				<input type="checkbox" name="admin" value="true"> check for admin privileges
			</li>

			<li>
				<input type="submit" class="button" value="Submit">
			</li>
			
		</form>
		</ul>

	</div>
</div>

<% include footer %>
