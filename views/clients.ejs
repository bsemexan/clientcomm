<% include header %>

<h3>Welcome</h3>

<% if (clients.length > 0) { %>
	Your clients:
	<ul>
		<% for (var i = 0; i < clients.length; i++ ) { %>
			<li>
				<a href="/cmview/<%= clients[i].clid %>">
					<%= clients[i].first + " " + clients[i].middle + " " + clients[i].last %>
				</a>
				<% if (clients[i].otn) { %>
					<span class="badge">OTN: <%= clients[i].otn %></span>
				<% } %>
				<% if (clients[i].so) { %>
					<span class="badge">SO: <%= clients[i].so %></span>
				<% } %>
			</li>
		<% } %>
	</ul>
<% } else { %>
	You have no clients. Add some below.
<% } %>

Other options:
<ul>
	<li><a href="/floaters">Identify unknown contacts</a></li>
</ul>

<div class="entryform">
	Add a new client:
	<form method="post">

		<div>
			<div class="form-desc">
				First Name
			</div>
			<div>
				<input type="text" name="first" placeholder="First Name" required>
			</div>
		</div>

		<div>
			<div class="form-desc">
				Middle Name
			</div>
			<div>
				<input type="text" name="middle" placeholder="Middle Name">
			</div>
		</div>

		<div>
			<div class="form-desc">
				Last Name
			</div>
			<div>
				<input type="text" name="last" placeholder="Last Name" required>
			</div>
		</div>

		<div>
			<div class="form-desc">
				Date of Birth
			</div>
			<div>
				<input type="date" name="dob" placeholder="Date of Birth">
			</div>
		</div>

		<div>
			<div class="form-desc">
				OTN
			</div>
			<div>
				<input type="text" name="otn" placeholder="OTN">
			</div>
		</div>

		<div>
			<div class="form-desc">
				SO
			</div>
			<div>
				<input type="text" name="so" placeholder="SO">
			</div>
		</div>

		<input type="submit" value="Submit">

	</form>
</div>


<% include footer %>
